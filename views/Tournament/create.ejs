        //     step:10
        // });

        $('#startDateTime').datetimepicker({
            dayOfWeekStart : 1,
            lang:'en',
            startDate:	today,
            value:today, step:10
        });

        $('#startDateTime').on('change', function() {
            $('#1stStart').val($(this).val());
        })

        $('#1stStart').datetimepicker({
            dayOfWeekStart : 1,
            lang:'en',
            startDate:	today,
            value:today, step:10
        });

        $('#2ndStart').datetimepicker({
            dayOfWeekStart : 1,
